@model Restaurant_Management.Models.Login

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @if (TempData["msg"] != null)
    {
        <div class=" alert alert-success">@TempData["msg"]</div>
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row d-flex justify-content-center">
        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login" class="btn btn-default btn-success mt-2 mb-2" />
                            @Html.ActionLink("Register", "Create", "User", new { @class = "btn btn-info mt-2 mb-2" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @if (ViewBag.msg != null)
                            {
                                <b class="text-danger">@ViewBag.msg</b>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
}

<script src="~/JS/jquery.validate.js"></script>
<script src="~/JS/jquery.validate.unobtrusive.min.js"></script>